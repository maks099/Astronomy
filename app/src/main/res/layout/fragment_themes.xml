<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:background="@drawable/vertical_space"
    android:orientation="vertical"
    tools:context=".ThemesFragment">


    <LinearLayout
        android:id="@+id/linLytSolarSystem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_weight="2"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/f_themes_solar"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/solar_system" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:text="Сонячна система"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="24dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linLytGalaxy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_weight="2"
        android:background="@drawable/f_themes_galaxy"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/f_themes_padding"
            android:src="@drawable/galaxy" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:text="Галактика"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="24dp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linLytExploration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_weight="2"
        android:background="@drawable/f_themes_exploration"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:padding="@dimen/f_themes_padding"
            android:src="@drawable/exploration" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="67dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_weight="0.5"
            android:text="Дослідження космосу"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="24dp" />

    </LinearLayout>

</LinearLayout>