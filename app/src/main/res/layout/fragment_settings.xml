<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_height="match_parent"
    android:background="@drawable/vertical_space"
    android:padding="20dp"
    tools:context=".SettingsFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@drawable/theme_bg"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/chbShowPlanetName"
            android:layout_width="wrap_content"
            android:text="Відображати назви планет"
            android:textColor="@color/textColor"
            android:textSize="16sp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:outlineAmbientShadowColor="@color/textColor"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:background="@drawable/theme_bg"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnRemoveRating"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Очистити рейтинг"
            android:drawableRight="@drawable/ic_baseline_delete_forever_24"
            android:backgroundTint="@color/btnExitColor"/>

    </LinearLayout>


</LinearLayout>